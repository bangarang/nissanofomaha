<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Msrp</th>
      <th>City</th>
      <th>Hwy</th>
      <th>Features</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.model %></td>
        <td><%= package.msrp %></td>
        <td><%= package.city %></td>
        <td><%= package.hwy %></td>
        <td><%= package.features %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

