        </div>
        
        <div class="field">
          <div class="pref_cont">
            <label class="prefix">VIN</label>
          </div>
          <div class="input_cont">
            <%= f.text_field :trade_vin %>
          </div>
        </div>
      </div>
    </div>

    <div class="actions">
      <input name="commit" type="submit" value="Submit">
    </div>
  <% end %>
</div>